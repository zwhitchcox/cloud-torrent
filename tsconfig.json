{
  "compilerOptions": {
    "target": "es2019",
    "outDir": "dist",
    "sourceMap": true,
    "module": "commonjs",
    "noEmitOnError": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "files": [
    "convert",
    "play.ts"
  ],
  "include": [
    "**/*.test.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
